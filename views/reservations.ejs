<%- include('header'); -%>

<form action="/" method="post">
    <label for="dateInput">Date To Watch: </label>
    <input id="dateInput" type="date" name="dateToWatch">
    <label for="cars">Choose a car:</label>
    <select name="gym_name" id="gym_name">
        <optgroup label="Earth Treks">
            <option value="golden">Golden</option>
            <option value="hamden">Hamden</option>
        </optgroup>
        <optgroup label="Evo">
            <option value="louisville">Louisville</option>
        </optgroup>
    </select>
    <button type="submit">Go</button>
</form>

<div class="reservations">
    <% if (reservationData) { %>
        <p> <%- reservationData.date_label %> </p>
        <%- reservationData.event_list_html %>
    <% } %>
</div>

<%- include('footer'); -%>
